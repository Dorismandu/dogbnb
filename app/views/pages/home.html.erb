<div class="banner d-flex justify-content-center align-items-center flex-column">
  <h1>Become a part-time <strong>dog</strong> owner</h1>
  <a href="#" class="button cta">Get a pet!</a>
</div>
<div class="container">
  <div class="header d-flex">
    <h3>Rent a Dog</h3>
    <i class="fas fa-long-arrow-alt-right"></i>
  </div>
  <div class="card-box">
    <% @dogs.first(3).each do |dog| %>
      <div class="card">
        <div>
          <%= cl_image_tag dog.photos.first.key, height: 150, width: 298, crop: :fill, class: "profile-pic"%>
        </div>
        <div class="profile-info" style="height: 170px;">
          <h4>Meet <%= dog.name %></h4>
          <div class="profile-description">
            <p style="display:block;text-overflow: ellipsis;width: 250px;overflow: hidden; white-space: wrap; font-size: 10px; height: 60px; margin-top: 15px;">"<%= dog.description %>"</p>
          </div>
          <i class="fas fa-home house-logo" style="font-size: 13px;"> <span style="font-size: 10px;">  Kreuzberg, Berlin</span></i>
          <i class="fas fa-star profile-rating" style="font-size: 13px;"> 4.5</i>
          <%= link_to "See More ->", dog_path(dog), class: "see-more" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="header d-flex">
    <h3>Popular activities </h3>
    <i class="fas fa-long-arrow-alt-right"></i>
  </div>
  <div class="card-box">
    <div class="card"></div>
    <div class="card"></div>
    <div class="card"></div>
  </div>
</div>
<div class="container">
  <div class="big-card d-flex">
    <div class="big-card-info">
      <h2>Become a Dog sharer</h2>
      <p>Share your pets and bring joy to the world</p>
      <a href="#" class="button">Learn more</a>
    </div>
    <div class="big-card-picture">

    </div>
  </div>
</div>
