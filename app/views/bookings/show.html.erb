<% statuses = ["pending", "approved", "denied"] %>

<div class="banner mt-5 p-5" style="height: 300px; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @booking.dog.photos.first.key, crop: :fill %>);background-size: 100%; background-repeat: no-repeat;">
    <div class="container mt-5">
      <h2><%= @booking.activity.capitalize %> with <%= @booking.dog.name %></h2>
    </div>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-lg-6">
      <h5>Status:</h5>
      <p class=<%= statuses[@booking.status] %> ><%= statuses[@booking.status].upcase %></p>
    </div>
    <div class="col-sm-12 col-lg-6">
      <h5>Reply:</h5>
      <p class="message" ><%= @booking.message ? @booking.message : "The owner hasn't left a reply yet" %></p>
    </div>
  </div>
  <h5 class="mt-3 mb-3">Request Details:</h5>
  <div class="row">
    <div class="col-sm-12 col-lg-6">
      <div class="request-card">
        <h5><%= image_tag("images/pickup.png", size: "18") %> Pick-up</h5>
        <p><b>Time:</b> <%= @booking.pickup_time.strftime("%-d/%-m/%y: %H:%M %Z") %></p>
        <p><b>Location:</b> <%= @booking.pickup_location %></p>
      </div>
    </div>
    <div class="col-sm-12 col-lg-6">
      <div class="request-card">
        <h5><%= image_tag("images/giveback.png", size: "18") %> Give Back</h5>
        <p><b>Time:</b> <%= @booking.giveback_time.strftime("%-d/%-m/%y: %H:%M %Z") %></p>
        <p><b>Location:</b> <%= @booking.giveback_location %></p>
      </div>
    </div>
  </div>
</div>